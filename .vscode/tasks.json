{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "runner": "terminal",
    "tasks": [
        {
            "options": {
                "cwd": "${workspaceRoot}/src/Management.Client/src"
            },
            "label": "Start Management.Client",
            "command": "npx",
            "args": [ "webpack-dev-server" ],
            "type": "shell",
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "fileLocation": "absolute",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern":{
                        "regexp": "webpack: Compiling"
                    },
                    "endsPattern":{
                        "regexp": "webpack: (Compiled successfully|Failed to compile)"
                    }
                },
                "pattern": {
                    "regexp": "^(.*)\\((\\d+),(\\d+)\\): \\((\\d+),(\\d+)\\) (warning|error) FABLE: (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "endLine": 4,
                    "endColumn": 5,
                    "severity": 6,
                    "message": 7
                }
            }
        },
        {
			"label": "IndividualTests (Server)",
			"type": "process",
			"command": "dotnet",
			"args": [
				"watch",
				"run",
				"--environment", "Development",
				"--urls", "https://localhost:5001",
			],
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/src/IndividualTests.Server",
			},
		},
		{
			"label": "IndividualTests (Client)",
			"type": "npm",
			"script": "dev",
			"path": "src/IndividualTests.Client",
			"problemMatcher": [],
		},
		{
			"label": "IndividualTests",
			"dependsOn": [ "IndividualTests (Server)", "IndividualTests (Client)" ]
		},
    ]
}
